<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:paddingBottom="@dimen/activity_vertical_margin"
				android:paddingLeft="@dimen/activity_horizontal_margin"
				android:paddingRight="@dimen/activity_horizontal_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				tools:context=".activity.UserDetailsActivity_$UserDetailsFragment_">

	<TextView
			android:id="@+id/contactDetailsTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="@dimen/text_appearance_smaller_medium"
			android:textStyle="bold"
			android:text="Contact details"/>

	<View
			android:id="@+id/divider2View"
			style="@style/divider"
			android:layout_below="@+id/contactDetailsTextView"
			android:layout_marginBottom="@dimen/divider_vertical_margin"
			android:layout_marginTop="@dimen/divider_vertical_margin"/>

	<TextView
			android:id="@+id/nameTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/divider2View"
			android:layout_marginLeft="@dimen/view_horizontal_margin"
			android:text="@string/user_details_activity_name_text"
			android:textSize="@dimen/text_appearance_smaller_medium"/>

	<TextView
			android:id="@+id/emailTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/nameTextView"
			android:layout_marginTop="@dimen/view_vertical_margin"
			android:text="@string/user_details_activity_email_text"
			android:textSize="@dimen/text_appearance_smaller_medium"/>

	<TextView
			android:id="@+id/positionTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/emailTextView"
			android:layout_marginTop="@dimen/category_view_top_margin"
			android:text="Position"
			android:textSize="@dimen/text_appearance_smaller_medium"
			android:textStyle="bold"/>

	<View
			android:id="@+id/divider1View"
			style="@style/divider"
			android:layout_below="@+id/positionTextView"
			android:layout_marginBottom="@dimen/divider_vertical_margin"
			android:layout_marginTop="@dimen/divider_vertical_margin"/>

	<TextView
			android:id="@+id/permanentFloorZoneTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/divider1View"
			android:layout_marginLeft="@dimen/view_horizontal_margin"
			android:text="Permanent:"
			android:textSize="@dimen/text_appearance_smaller_medium"/>

	<TextView
			android:id="@+id/temporaryFloorZoneTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/permanentFloorZoneTextView"
			android:layout_marginLeft="@dimen/view_horizontal_margin"
			android:text="Temporary:"
			android:textSize="@dimen/text_appearance_smaller_medium"/>

	<TextView
			android:id="@+id/currentMapPositionTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/temporaryFloorZoneTextView"
			android:layout_marginTop="@dimen/category_view_top_margin"
			android:text="Current position"
			android:textSize="@dimen/text_appearance_smaller_medium"
			android:textStyle="bold"/>

	<View
			android:id="@+id/divider3View"
			style="@style/divider"
			android:layout_below="@+id/currentMapPositionTextView"
			android:layout_marginBottom="@dimen/divider_vertical_margin"
			android:layout_marginTop="@dimen/divider_vertical_margin"/>

	<WebView
			android:id="@+id/mapWebView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:layout_below="@+id/divider3View"/>

</RelativeLayout>
